<Window x:Class="testperf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testperf"
        mc:Ignorable="d"
        Title="MainWindow" Height="405" Width="496">
    <Grid Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" Margin="0,0,0,0">
        <Button x:Name="button" Content="Run" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="86" Click="button_Click"/>
        <TextBox x:Name="SpeedText" HorizontalAlignment="Left" Margin="10,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="456" Height="305" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" VerticalScrollBarVisibility="Auto"/>

    </Grid>
</Window>
